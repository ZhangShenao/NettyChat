<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>william</groupId>
    <artifactId>Netty-Chat-Base</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>ChatClient</artifactId>
  
   <dependencies>
   	<dependency>
		<groupId>william</groupId>
    	<artifactId>ChatCommon</artifactId>
    	<version>0.0.1-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>william</groupId>
    	<artifactId>ChatServer</artifactId>
    	<version>0.0.1-SNAPSHOT</version>
	</dependency>
  </dependencies>
  
  <build>  
    <plugins>  
  		<!-- 打jar包配置 -->
        <plugin>  
            <groupId>org.apache.maven.plugins</groupId>  
            <artifactId>maven-jar-plugin</artifactId>  
            <configuration> 
            	<!-- 包含的配置文件 --> 
            	<includes>
            		<include>*.properties</include>
            		<include>*.xml</include>
            	</includes>
                <archive>  
                    <manifest>  
                    	<!-- 在MANIFEST.MF加上Class-Path项并配置依赖包 -->
                        <addClasspath>true</addClasspath>  
                        <!-- 指定依赖包所在的目录 -->
                        <classpathPrefix>lib/</classpathPrefix>  
                        <!-- 指定主类 -->
                        <mainClass>william.server.main.ClientMain</mainClass>  
                    </manifest>  
                </archive>  
            </configuration>  
        </plugin>  
        
        <!-- 依赖包配置 -->
        <plugin>  
            <groupId>org.apache.maven.plugins</groupId>  
            <artifactId>maven-dependency-plugin</artifactId>  
            <!-- 将依赖包拷贝到${project.build.directory}/lib指定的位置,即lib目录下 -->
            <executions>  
                <execution>  
                    <id>copy-dependencies</id>  
                    <phase>package</phase>  
                    <goals>  
                        <goal>copy-dependencies</goal>  
                    </goals>  
                    <configuration>  
                        <outputDirectory>${project.build.directory}/lib</outputDirectory>  
                    </configuration>  
                </execution>  
            </executions>  
        </plugin>  
    </plugins>  
  </build>  
</project>